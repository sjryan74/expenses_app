<h1>Transaction</h1>

<p>
  <strong>Date:</strong>
  <%= @transaction.trans_date %>
</p>

<p>
  <strong>Description:</strong>
  <%= @transaction.description %>
</p>

<p>
  <strong>Amount:</strong>
  <%= number_to_currency(@transaction.amount, unit: '') %>
</p>

<p>
  <strong>Tags:</strong>
  <%= render @transaction.tags %>
</p>

<%= link_to "Edit", edit_transaction_path(@transaction), class: "crud_button" %>
<%= link_to "Delete", @transaction, method: :delete, class: "crud_button",
  data: { confirm: "Are you sure you want to delete this transaction?"} %>

<p><br>
<%= link_to "Back", transactions_path %>
</p>