<%= form_for(tag, remote: true) do |f| %>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :name, class: "col-form-label" %>
      <%= f.text_field :name, class: "form-control form-control-sm" %>
    </div>
    <div class="col-sm-4">
      <%= f.label :description, class: "col-form-label" %>
      <%= f.text_field :description, class: "form-control form-control-sm" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>